{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "sourceMap": true,
    "strict": true,
    "declaration": true,
    "outDir": "dist/",
    "rootDir": "src/",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports" : true,
    "esModuleInterop" : true
  },
  "include" : [
    "src/**/*"
  ]
}
